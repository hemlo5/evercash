# Server Configuration
NODE_ENV=development
PORT=5006
CLIENT_URL=http://localhost:3001

# API URLs
LOCAL_API_URL=http://localhost:5006
PROD_API_URL=https://api.emerald-budget.com

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-refresh-secret-change-this
SESSION_SECRET=your-session-secret-change-this
BCRYPT_ROUNDS=14

# Database
DATABASE_PATH=./data/budget.db

# External Services
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Currency Exchange API
EXCHANGE_API_KEY=your-exchange-api-key
EXCHANGE_API_URL=https://api.exchangerate-api.com/v4/latest/

# SimpleFIN (if using)
SIMPLEFIN_BRIDGE_URL=https://bridge.simplefin.org
SIMPLEFIN_APP_TOKEN=your-simplefin-token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_AUTH=20
RATE_LIMIT_MAX_GENERAL=50
